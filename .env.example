# =========================
# WHISPER CONFIGURATION
# =========================
WHISPER_MODEL_NAME=medium
WHISPER_DEVICE=cuda

# =========================
# AI APIs (Google Gemini + SerpAPI)
# =========================
# Google Gemini API Key (Get from: https://aistudio.google.com/apikey)
GOOGLE_API_KEY=

# OpenAI API Key
OPENAI_API_KEY=

# Anthropic API Key
ANTHROPIC_API_KEY=

# SerpAPI for search volume data (Get from: https://serpapi.com/)
# Free tier: 2500 searches/month
SERPAPI_API_KEY=

# Reddit API for trending discussions (Get from: https://www.reddit.com/prefs/apps)
# Free tier: 60 requests/minute
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=yt-content-ideation/1.0

# =========================
# MODEL CONFIGURATION
# =========================
PRO_MODEL=openai:gpt-5
SUMMARIZER_MODEL=openai:gpt-5-mini
PATTERN_ANALYZER_MODEL=openai:gpt-5-nano
TRANSLATOR_MODEL=openai:gpt-5-mini
QUERY_OPTIMIZER_MODEL=openai:gpt-5-nano

# =========================
# DIRECTORY CONFIGURATION
# =========================
LOG_LEVEL=INFO
TEMP_DOWNLOAD_DIR=temp_files/
OUTPUT_TRANSCRIPTS_DIR=output/transcripts/
SUMMARY_OUTPUT_DIR=output/summaries/
TEMP_BATCH_DIR=temp_batch/
OUTPUT_SCRIPTS_DIR=output/scripts/
OUTPUT_ANALYSIS_DIR=output/analysis/
# Canonical trends output directory (alias OUTPUT_TRENDS_DIR también soportado)
TRENDS_OUTPUT_DIR=output/trends/

# =========================
# SCRIPT GENERATOR SPEED-UPS (NEW)
# =========================
# Reuse cached transcripts to speed up iterative runs
TRANSCRIPT_CACHE_ENABLED=false
TRANSCRIPT_CACHE_DIR=output/analysis/transcripts_cache/
# yt-dlp search timeout (seconds)
YT_SEARCH_TIMEOUT_SECONDS=180

# =========================
# RATE LIMITING & CACHING (NEW)
# =========================
# LLM rate limit (requests per minute)
LLM_QPS=10
# Enable/disable LLM cache
LLM_CACHE_ENABLED=true
# Cache storage directory (alias LLM_CACHE_PATH también soportado)
LLM_CACHE_DIR=output/.llm_cache/
# Cache TTL in days
LLM_CACHE_TTL_DAYS=7

# =========================
# PROMPT VERSIONING (NEW)
# =========================
# Used to invalidate cache when prompts change
SUMMARIZER_PROMPT_VERSION=v1.0
POST_KITS_PROMPT_VERSION=v1.0
IDEATION_PROMPT_VERSION=v1.0
RESEARCH_PROMPT_VERSION=v1.0

# =========================
# POST KITS VALIDATION (NEW)
# =========================
# LinkedIn
POST_KITS_LINKEDIN_MIN_CHARS=700
POST_KITS_LINKEDIN_MAX_CHARS=1200
POST_KITS_LINKEDIN_MIN_INSIGHTS=4
POST_KITS_LINKEDIN_MAX_INSIGHTS=8

# Twitter / X
POST_KITS_TWITTER_MIN_TWEETS=8
POST_KITS_TWITTER_MAX_TWEETS=12
POST_KITS_TWITTER_MAX_CHARS_PER_TWEET=280
POST_KITS_TWITTER_MAX_HASHTAGS=3
