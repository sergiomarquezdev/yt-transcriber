# =============================================================================
# YT-TRANSCRIBER CONFIGURATION
# =============================================================================

# =========================
# WHISPER (Transcription)
# =========================
# Model options: tiny, base, small, medium, large
# tiny/base: ~1GB RAM | small: ~2GB | medium: ~5GB | large: ~10GB
WHISPER_MODEL_NAME=base

# Device: cpu or cuda (NVIDIA GPU required for cuda)
WHISPER_DEVICE=cpu

# =========================
# AI APIs
# =========================
# Google Gemini API Key (required for summaries)
# Get from: https://aistudio.google.com/apikey
GOOGLE_API_KEY=

# Optional: Alternative LLM providers
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=

# =========================
# LLM MODEL SELECTION
# =========================
# Default models (Gemini). Prefix with provider for others:
# - gemini-2.5-flash (default)
# - openai:gpt-4o-mini
# - anthropic:claude-3-haiku
SUMMARIZER_MODEL=gemini-2.5-flash
TRANSLATOR_MODEL=gemini-2.5-flash-lite

# =========================
# DIRECTORIES
# =========================
LOG_LEVEL=INFO
TEMP_DOWNLOAD_DIR=temp_files/
OUTPUT_TRANSCRIPTS_DIR=output/transcripts/
SUMMARY_OUTPUT_DIR=output/summaries/

# =========================
# CACHING
# =========================
# LLM response caching (saves API costs on repeated runs)
LLM_CACHE_ENABLED=true
LLM_CACHE_DIR=output/.llm_cache/
LLM_CACHE_TTL_DAYS=7

# Transcript caching (reuse transcripts for same video)
TRANSCRIPT_CACHE_ENABLED=false
TRANSCRIPT_CACHE_DIR=output/analysis/transcripts_cache/

# =========================
# POST KITS (LinkedIn + Twitter)
# =========================
POST_KITS_LINKEDIN_MIN_CHARS=800
POST_KITS_LINKEDIN_MAX_CHARS=1200
POST_KITS_TWITTER_MIN_TWEETS=8
POST_KITS_TWITTER_MAX_TWEETS=12
